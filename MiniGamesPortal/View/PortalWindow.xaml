<Window x:Class="MiniGamesPortal.View.PortalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniGamesPortal"
        mc:Ignorable="d"
        Title="PortalWindow" Height="200" Width="200">
    <Grid>
        <StackPanel x:Name="MainPanel">
            <Label Content="Mini Games Portal" FontWeight="ExtraBold" HorizontalAlignment="Center" Margin="10"/>
            <TextBlock Text="Select a game to play:"  Margin="10"/>
            <Button x:Name="StartBlackJack" Content="BlackJack" Margin="10" Click="StartBlackJack_OnClick"/>

        </StackPanel>
    </Grid>
</Window>
